@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Forgot Password</h3>
                </div>
                <div class="card-body">
                    <p class="text-muted text-center">
                        Please enter your email address to receive a password recovery link.
                    </p>

                    <form method="post" action="/Account/ForgotPassword">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email:</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required />
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Send Recovery Link</button>
                        </div>
                    </form>

                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success mt-3" role="alert">
                            @ViewBag.Message
                        </div>
                    }

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger mt-3" role="alert">
                            @ViewData.ModelState.Values.FirstOrDefault()?.Errors?.FirstOrDefault()?.ErrorMessage
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
